{
	"playbooks":[
		{
			"name":"Freshen a remote site with local files no DB push/update",
			"shortname":"freshenRemote",
			"yaml": "push-local-to-remote.yml",
			"fields":[
				{
					"name":	"target",
					"label":"File to save version in on remote machine",
					"type":"input",
					"returnType":"string",
					"required":true,
					"placeholder":"/var/tmp/zz_0.0"
				},
				{
					"name":"source",
					"label":"Path to local data to use for site",
					"type":"input",
					"returnType":"string",
					"required":true,
					"placeholder":"/home/tobias/workspace/Cottaging/sites/zz"
				}
			],
			"configNodes":[],
			"constants":[]
		},


		{
			"name":"Pull a local copy of live site without DB",
			"shortname":"localCopy",
			"yaml": "pull-full-copy.yml",
			"fields":[
				{
					"name":	"local",
					"label":"Local directory to save in",
					"type":"input",
					"returnType":"string",
					"required":true,
					"placeholder":"/var/tmp"
				},
				{
					"name":"source",
					"label":"Select remote folder to pull",
					"type":"select",
					"returnType":"string",
					"required":true,
					"valueType":"api",
					"remoteValues":{
						"method":"GET",
						"path":"/getFiletree"

					}

				}
			],
			"configNodes":[
				{
					"argName": "mysql_root_pw",
					"node": "mysql_root_pw"
				}	
			],
			"constants":[]
		}

	]
}
